<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Total amount to Give : "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500.00"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Total amount to Get : "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500.00"/>

            </LinearLayout>


        </LinearLayout>




        <ListView
            android:id="@+id/listViewFromDB"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="25dp"
            >
        </ListView>




   <!--
    </LinearLayout>
-->



        <ImageButton
            android:id="@+id/fab_image_button"
            android:layout_width="@dimen/floating_button_diameter"
            android:layout_height="@dimen/floating_button_diameter"
            android:background="@drawable/floating_button"
            android:src="@drawable/gear"
            android:tint="@android:color/white"

            android:elevation="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <ImageButton
            android:id="@+id/fab_image_button2"
            android:layout_width="@dimen/floating_button_diameter"
            android:layout_height="@dimen/floating_button_diameter"
            android:background="@drawable/floating_button"
            android:src="@drawable/marker"
            android:tint="@android:color/white"

            android:elevation="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/fab_image_button"
            android:layout_toStartOf="@+id/fab_image_button" />


</RelativeLayout>
