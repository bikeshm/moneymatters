<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Overview"
            android:paddingBottom="10dp"
            android:gravity="center_horizontal"/>


        <TextView
            android:id="@+id/lendAndBorrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lend and Borrow "
            android:layout_marginBottom="10dp"
            android:background="@drawable/clickable_text"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="false">

            <TextView android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Amount to get " />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500.00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Amount to Give " />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1500.00" />

        </LinearLayout>




        <TextView
            android:id="@+id/personalExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Expense "
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/clickable_text"
            android:clickable="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Total spend " />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2500.00" />

        </LinearLayout>




        <TextView
            android:id="@+id/jointExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Joint/Group Expense"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/clickable_text"
            android:clickable="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="false">

            <TextView android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Amount spend " />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3000.00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Amount to Get " />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1500.00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Amount to Give " />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1500.00" />

        </LinearLayout>





        <TextView
            android:id="@+id/bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bank"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/clickable_text"
            android:clickable="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Comming soon " />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.00" />

        </LinearLayout>








    </LinearLayout>





</LinearLayout>
