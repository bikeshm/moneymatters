<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/l1"
        android:paddingLeft="20dp" >

        <TextView android:text="Name : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/username"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/l1_1"
        android:paddingLeft="20dp"
        android:layout_below="@+id/l1">

        <TextView android:text="Month/Year : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView android:text="May - 2015"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_marginTop="10dp"

        android:paddingLeft="20dp"
        android:layout_below="@+id/l1_1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="I need to give him (prev balance)  "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": 3200.00"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Total amount to Give  "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": 3700.00"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Total amount to Get  "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": 1500.00"/>

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:paddingBottom="15dp"
        android:layout_below="@+id/l2"
        android:id="@+id/scrollView">

        <TableLayout
            android:id="@+id/tableLayout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="1"
            android:stretchColumns="1"
            android:background="#DFD080"
            android:paddingBottom="2dp"
            >

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="#DFD080">
                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:padding="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:padding="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:padding="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:padding="5dp"
                    android:textStyle="bold"/>
            </TableRow>














        </TableLayout>

    </ScrollView>


    <ImageButton
        android:id="@+id/addEntry"
        android:layout_width="@dimen/floating_button_diameter"
        android:layout_height="@dimen/floating_button_diameter"
        android:background="@drawable/floating_button"
        android:src="@drawable/add_24"
        android:tint="@android:color/white"

        android:elevation="10dp"
        android:layout_alignBottom="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-4dp"
        android:layout_marginRight="-4dp"/>


</RelativeLayout>
