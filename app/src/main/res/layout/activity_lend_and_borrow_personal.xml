<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/l1"
        android:paddingLeft="20dp" >

        <TextView android:text="Name : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/username"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/l1_1"
        android:paddingLeft="20dp"
        android:layout_below="@+id/l1">

        <TextView android:text="Month/Year : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/dateChanger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:minWidth="100dp"/>

        <TextView
            android:id="@+id/dateChangerForDb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_marginTop="10dp"

        android:paddingLeft="20dp"
        android:layout_below="@+id/l1_1">

        <!--
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="I need to give him (prev balance)  "/>

            <TextView
                android:id="@+id/mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": 3200.00"/>

        </LinearLayout>


        -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/balanceAmtLabel"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Balance amount to Give/get  "/>

            <TextView
                android:id="@+id/balanceAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": 00.00"
                android:textStyle="bold" />

        </LinearLayout>





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:textSize="11dp"
                android:id="@+id/prevBalanceAmtLabel"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Previous balace to Give/get  "/>

            <TextView
                android:id="@+id/prevBalanceAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": 00.00"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="Total amt I borrowed (Selected Month)  "/>

            <TextView
                android:id="@+id/monthTotalToGive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": 00.00"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="Total amt I have given (selected Month)  "/>

            <TextView
                android:id="@+id/monthTotalToGet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": 00.00"/>

        </LinearLayout>





    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:paddingBottom="15dp"
        android:layout_below="@+id/l2"
        android:id="@+id/scrollView">

        <TableLayout
            android:id="@+id/tableLayout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="1"
            android:stretchColumns="1"
            android:background="#DFD080"
            android:paddingBottom="2dp"
            >

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="#DFD080">
                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:padding="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:padding="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:padding="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:padding="5dp"
                    android:textStyle="bold"/>
            </TableRow>














        </TableLayout>

    </ScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_24"
        android:layout_gravity="bottom|end"
        app:elevation="6dp"
        app:fabSize="mini"

        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"

        app:pressedTranslationZ="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
