<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tricon.labs.pepper">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.tricon.labs.pepper.activities.ActivitySplash"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.tricon.labs.pepper.activities.ActivityHome"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tricon.labs.pepper.activities.lendandborrow.ActivityLendAndBorrowIndividual"
            android:label="@string/title_activity_lend_and_borrow_personal"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tricon.labs.pepper.activities.lendandborrow.ActivityLendAndBorrowAddEntry"
            android:label="@string/title_activity_lend_and_borrow_add_entry"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tricon.labs.pepper.activities.personalexpense.ActivityPersonalExpenseAddEntry"
            android:label="@string/title_activity_add_entry"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".activities.groupexpense.ActivityAddOrEditGroup"
            android:label="@string/title_activity_add_user"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tricon.labs.pepper.activities.personalexpense.ActivityPersonalExpenseIndividual"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tricon.labs.pepper.activities.groupexpense.ActivityGroupExpenseIndividual"
            android:label="@string/title_activity_joint_expense_individual"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.groupexpense.ActivityGroupExpenseAddEntry"
            android:label="@string/title_activity_add_group_entry" />
        <activity
            android:name="com.tricon.labs.pepper.activities.personalexpense.ActivityEditCategory"
            android:label="@string/title_activity_edit_category"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.tricon.labs.pepper.activities.ActivityRegisterUser"
            android:label="@string/title_activity_register_user" />
        <activity
            android:name="com.tricon.labs.pepper.activities.ActivitySettings"
            android:label="@string/title_activity_settings" />
    </application>

</manifest>
